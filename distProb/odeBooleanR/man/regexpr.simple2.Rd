function(a,x)
{
	# Use as follows: >regexpr.simple2("[:][0-9.]+[,]",x)
	# Returns the first and last positions in string "x" of the first match with string "a"
	result<-list()
	w<-regexpr(a,x)
	result$from<-w[1]
	if(w[1]>-1)
  {
	   result$to<-w[1]+attr(w, "match.length")-1
	}
	return(result)
  }
}
